{
  "builds": [
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://tech-recruit.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "front-end/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://tech-recruit.onrender.com"
  }
}
